    <script>
        // Inicializar el contador cada vez que se carga la p√°gina
        function initializeCountdown() {
            // Establecer el tiempo inicial: 3 horas, 49 minutos, 23 segundos
            let totalSeconds = (3 * 3600) + (49 * 60) + 23;
            
            function updateDisplay() {
                const hours = Math.floor(totalSeconds / 3600);
                const minutes = Math.floor((totalSeconds % 3600) / 60);
                const seconds = totalSeconds % 60;
                
                document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
                document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
                document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');
                
                if (totalSeconds <= 0) {
                    document.querySelector('.countdown-title').textContent = 'üî• ¬°OFERTA EXPIRADA!';
                    document.querySelector('.whatsapp-btn').style.opacity = '0.5';
                    document.querySelector('.whatsapp-btn').style.pointerEvents = 'none';
                    return;
                }
                
                totalSeconds--;
                setTimeout(updateDisplay, 1000);
            }
            
            updateDisplay();
        }

        function redirectToWhatsApp() {
            const message = "Quiero descuento en mi libro de 20 recetas saludables";
            const encodedMessage = encodeURIComponent(message);
            const phoneNumber = "3217999994";
            const whatsappURL = `https://wa.me/${phoneNumber}?text=${encodedMessage}`;
            window.open(whatsappURL, '_blank');
        }
        
        // Iniciar el contador cuando la p√°gina se carga
        window.onload = initializeCountdown;
    </script>
